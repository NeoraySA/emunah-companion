# =============================================
# Emunah Companion – Server Environment Variables
# =============================================
# Copy this file to .env and fill in the values.
# NEVER commit .env to git!

# ----- Server -----
PORT=4000
NODE_ENV=development

# ----- Database (Prisma) -----
DATABASE_URL="mysql://emunah_app:YOUR_PASSWORD@127.0.0.1:3306/emunah_companion"

# ----- JWT -----
JWT_ACCESS_SECRET=your-access-secret-change-this
JWT_REFRESH_SECRET=your-refresh-secret-change-this
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# ----- Encryption (Journal) -----
JOURNAL_ENCRYPTION_KEY=your-32-byte-hex-key-change-this

# ----- Google Cloud Storage -----
GCS_PROJECT_ID=cartech-v1
GCS_MEDIA_BUCKET=emunah-companion-media
GCS_EXPORTS_BUCKET=emunah-companion-exports
GCS_SIGNED_URL_EXPIRY=3600

# Credentials (local dev only – use workload identity in prod)
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json

# ----- CORS -----
CORS_ORIGIN=http://localhost:3000
